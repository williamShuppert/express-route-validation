{
  "name": "express-route-validator",
  "version": "0.1.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build:tsc": "npx tsc",
    "build": "tsup",
    "format": "prettier --write \"{src,testing}/**/*.{js,ts}\"",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/williamShuppert/express-route-validation"
  },
  "keywords": [
    "express",
    "express-middleware",
    "validation",
    "request-validator",
    "response-validator",
    "middleware",
    "schema-validation",
    "api-validation",
    "zod",
    "joi",
    "typescript",
    "express-validation",
    "request-body",
    "request-query",
    "request-params",
    "route-validation"
  ],
  "author": "William Shuppert",
  "license": "MIT",
  "description": "",
  "dependencies": {
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.2",
    "concurrently": "^9.1.0",
    "jest": "^29.7.0",
    "joi": "^17.13.3",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "zod": "^3.24.1"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/testing/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "prettier": {
    "tabWidth": 1,
    "useTabs": true
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "minify": true
  }
}
